# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Products
GET     /products                                              controllers.ProductsController.getByCategoryId(categoryId: Long ?= -1)
GET     /products/:id                                          controllers.ProductsController.getById(id: Long)
POST    /products                                              controllers.ProductsController.create()
PATCH   /products/:id                                          controllers.ProductsController.update(id: Long)
DELETE  /products/:id                                          controllers.ProductsController.delete(id: Long)

GET     /forms/products/add                                    controllers.ProductsController.createForm()
POST    /forms/products/add                                    controllers.ProductsController.createFormHandle()
GET     /forms/products                                        controllers.ProductsController.getByCategoryIdForm(categoryId: Long ?= -1)
GET     /forms/products/:id                                    controllers.ProductsController.getByIdForm(id: Long)
GET     /forms/products/:id/update                             controllers.ProductsController.updateForm(id: Long)
POST    /forms/products/update                                 controllers.ProductsController.updateFormHandle()
GET     /forms/products/:id/delete                             controllers.ProductsController.deleteForm(id: Long)
POST    /forms/products/delete                                 controllers.ProductsController.deleteFormHandle()
